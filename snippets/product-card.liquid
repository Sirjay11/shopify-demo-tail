<div class=" text-center w-full py-6 px-3">
        <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
         <a href="{{ product.url }}">
          {% if product.featured_image %}
          <div class="h-80 overflow-hidden">
           <img class="w-full h-full object-cover transition duration-800 ease-in-out hover:scale-120 transform"
            src="{{ product.featured_image | img_url: 'medium' }}"
            alt="{{ product.featured_image.alt }} "
          />
          </div>

          {% else %}
           {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
          

          {% endif %}
         </a>
         <div class="flex flex-col p-4">
          <span class="text-gray-400 text-sm italic">{{ product.vendor }}</span>
          <a href="{{ product.url }}" class="text-gray-900 uppercase font-medium">{{ product.title }}</a>
          <p class="text-green-500">{{ product.price | money }}</p>
         </div>
          
        </div>
      </div>